{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "frontend-events-site"
  },
  "apps": [
    {
      "name": "app",
      "root": "src",
      "outDir": "dist/app",
      "assets": [
        "assets"
      ],
      "budgets": [
        {
          "type": "bundle",
          "name": "common",
          "baseline": "100kb",
          "maximumError": "10%"
        },
        {
          "type": "bundle",
          "name": "event-form",
          "baseline": "200kb",
          "maximumError": "10%"
        },
        {
          "type": "bundle",
          "name": "event-list",
          "baseline": "30kb",
          "maximumError": "10%"
        },
        {
          "type": "bundle",
          "name": "inline",
          "baseline": "2kb",
          "maximumError": "10%"
        },
        {
          "type": "bundle",
          "name": "main",
          "baseline": "1400kb",
          "maximumError": "10%"
        },
        {
          "type": "bundle",
          "name": "polyfills",
          "baseline": "60kb",
          "error": "10%"
        },
        {
          "type": "bundle",
          "name": "styles",
          "baseline": "110kb",
          "error": "10%"
        },
        {
          "type": "bundle",
          "name": "user",
          "baseline": "20kb",
          "maximumError": "10%"
        },
        {
          "type": "allScript",
          "baseline": "1600kb",
          "error": "10%"
        }
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "serviceWorker": true,
      "styles": [
        "styles/app.scss"
      ],
      "stylePreprocessorOptions": {
        "includePaths": [
          "./styles"
        ]
      },
      "scripts": [],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    },
    "codeCoverage": {
      "exclude": [
        "src/testing/**"
      ]
    }
  },
  "defaults": {
    "styleExt": "scss",
    "component": {
      "changeDetection": "OnPush"
    },
    "build": {
      "namedChunks": true
    },
    "serve": {
      "port": 4100,
      "host": "0.0.0.0"
    }
  },
  "warnings": {
    "typescriptMismatch": false
  }
}
