{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "module": "es2015",
    "strict": true,
    "types": []
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": false,
    "strictInjectionParameters": true,
    "diagnostics": true,
    "disableTypeScriptVersionCheck": true
  },
  "exclude": ["test.ts", "**/*.spec.ts", "testing/"]
}
