{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "strict": true,
    "types": ["node"]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": false,
    "strictInjectionParameters": true,
    "diagnostics": true,
    "disableTypeScriptVersionCheck": true
  },
  "exclude": ["**/*.spec.ts", "testing/"]
}
