{
    "id": "5b73073d8f25b99af4d38849",
    "database": "wcn-db",
    "collection": "events",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "origin.authorId": "%%user.id"
            },
            "write": true,
            "insert": true,
            "delete": true,
            "additional_fields": {}
        },
        {
            "name": "editor",
            "apply_when": {
                "%%true": {
                    "%function": {
                        "arguments": [
                            "%%user"
                        ],
                        "name": "isEditor"
                    }
                }
            },
            "write": true,
            "insert": true,
            "delete": false,
            "additional_fields": {}
        },
        {
            "name": "default",
            "apply_when": {},
            "read": true,
            "write": false,
            "insert": false,
            "delete": false,
            "additional_fields": {}
        }
    ],
    "schema": {
        "properties": {
            "_id": {
                "bsonType": "objectId"
            }
        }
    }
}
